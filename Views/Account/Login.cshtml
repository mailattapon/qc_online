@model Login

@{
  ViewBag.Title = "User Login";
}

<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <div class="card-header">
        <h4 class="mb-0">Login</h4>
      </div>
      <div class="card-body">
        <form method="post">
          <div id="validation-summary" asp-validation-summary="All" class="alert alert-danger alert-dismissible" role="alert"></div>
          <div class="form-group row">
            <label asp-for="UserName" class="col-4 col-form-label font-weight-bold"></label>
            <div class="col-8">
              <input asp-for="UserName" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="Password" class="col-4 col-form-label font-weight-bold"></label>
            <div class="col-8">
              <input asp-for="Password" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-8 offset-4 d-flex align-items-center">
              <input asp-for="RememberMe" />
              <label asp-for="RememberMe" class="ml-2 col-form-label font-weight-bold"></label>
            </div>
          </div>
          <div class="form-group row mb-0">
            <div class="col-8 offset-4">
              <button type="reset" class="btn btn-danger">
                <i class="fas fa-window-close"></i>
                <span class="ml-1">Reset</span>
              </button>
              <button type="submit" class="btn btn-primary ml-2">
                <i class="fas fa-sign-in-alt"></i>
                <span class="ml-1">Login</span>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
