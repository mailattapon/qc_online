@{
  ViewBag.Title = "Error";
}

<div class="row">
  <div class="col-8 offset-2">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-4 text-center">
            <p><i class="fa fa-exclamation-triangle fa-5x text-danger"></i><br/>Status Code: @ViewBag.StatusCode</p>
          </div>
          <div class="col-8">
            <h3>OPPSSS!!!! Sorry...</h3>
            <p>@ViewBag.Message</p>
            <a class="btn btn-primary" href="javascript:history.back()">Go Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
